<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_form_root"
    android:background="@color/bt_white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <com.braintreepayments.api.dropin.view.LoadingHeader
        android:id="@+id/bt_header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_header_container_height"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <ScrollView
        tools:ignore="UnusedAttribute"
        android:id="@+id/bt_form_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_header_container"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/bt_card_form_submit_button"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/bt_payment_description" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/signup_divider_color" />

            <pt.thingpink.views.TPFontableTextView
                style="@style/bt_base_textview_bold"
                android:id="@+id/bt_card_form_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_form_pay_with_card_header"
                android:textColor="@color/gngPink"
                android:textAllCaps="true"
                app:font="Gotham-Bold.otf"
                android:textSize="@dimen/grey_list_title"
                android:layout_below="@+id/second_divider"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/my_gng_vouchers_grey_background">
            </pt.thingpink.views.TPFontableTextView>


            <com.braintreepayments.cardform.view.CardForm
                android:id="@+id/bt_card_form"
                app:font="Gotham-Medium.otf"
                android:textColorHighlight="@color/gngPink"
                android:textColor="@color/bt_black"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/signup_divider_color" />

            <pt.thingpink.views.TPFontableTextView
                style="@style/bt_base_textview_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_form_pay_with_paypal_header"
                android:textColor="@color/gngPink"
                android:textAllCaps="true"
                app:font="Gotham-Bold.otf"
                android:layout_below="@+id/second_divider"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:textSize="@dimen/grey_list_title"
                android:paddingBottom="8dp"
                android:background="@color/my_gng_vouchers_grey_background">
            </pt.thingpink.views.TPFontableTextView>

            <com.braintreepayments.api.dropin.view.PaymentButton
                android:id="@+id/bt_payment_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_horizontal_margin"
                android:layout_marginRight="@dimen/login_horizontal_margin"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/bt_light_gray"
                android:layout_marginTop="@dimen/bt_form_padding" />


        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bt_form_submit_button" />

</RelativeLayout>
